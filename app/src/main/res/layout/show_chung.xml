<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/linear_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_chung_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="Mã Chung"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_chung_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete_3"
            android:paddingHorizontal="10dp"/>

        <ImageView
            android:id="@+id/img_chung_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/img_chung_delete"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_edit"
            android:paddingRight="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_title"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chung_so_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UerName  :" />

                <TextView
                    android:id="@+id/tv_chung_so_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số tiền thu :" />

                <TextView
                    android:id="@+id/tv_chung_so_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày nhận tiền :" />

                <TextView
                    android:id="@+id/tv_chung_so_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội Dung :" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chung_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_chung_so_tien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_chung_ngay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_chung_chu_thich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TN08" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>